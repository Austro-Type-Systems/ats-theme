{
	"$schema": "https://raw.githubusercontent.com/WordPress-Coding-Standards/theme.json/master/theme.json",
	"version": 6.4,
	"title": "ats_theme",
	"description": "This theme is built with the Block Theme API.",
	"author": "René Martínez Sánchez",
	"textDomain": "ats_theme",
	"settings": {
		"layout": {
			"contentSize": "1000px",
			"wideSize": "1200px"
		},
		"alignments": {
			"wide": "wide"
		},
		"color": {
			"text": true,
			"background": true,
			"link": true
		},
		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true,
			"units": ["px", "em", "rem", "vh", "vw", "%"]
		},
		"custom": {
			"htmlAttributes": true,
			"breakpoints": {
				"mobile": "767px",
				"tablet": "1024px",
				"desktop": "1200px"
			}
		},
		"blocks": {
			"core/paragraph": {
				"htmlAttributes": true
			},
			"core/image": {
				"htmlAttributes": true
			},
			"core/group": {
				"htmlAttributes": true
			}
		},
		"typography": {
			"customFontSize": true,
			"customLineHeight": true,
			"textDecoration": true,
			"textTransform": true,
			"fontFamilies": [
				{
					"fontFamily": "Saira, sans-serif",
					"slug": "saira",
					"name": "Saira"
				}
			]
		}
	},
	"styles": [
		"wp-block-styles"
	],
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	]
}
